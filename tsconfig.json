{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es5",
      "dom"
    ],
    "types": [
      "cypress",
      "node"
    ],
    "baseUrl": "./",
    "paths": {
      "@fixtures/*": [
        "cypress/fixtures/*"
      ],
      "@support/*": [
        "cypress/support/*"
      ],
      "@scripts/*": [
        "workshop-scripts/*"
      ]
    },
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "**/*.ts",
    "cypress/support/utils/resolveOptions.js",
    "cypress/support/utils/validateMethod.js"
  ]
}